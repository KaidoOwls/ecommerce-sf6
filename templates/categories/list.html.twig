{% extends 'base.html.twig' %}

{% block title %}Liste des plats de la catégorie
	{{category.libelle}}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Liste des plats de la catégorie
					{{category.libelle}}</h1>
			</div>
			{% for plat in plat.data %}
				<div class="col-3 mb-3">
				<img src="{{ asset('assets/images/images_the_district/plats/' ~ plat.image)}}" class="card-img-top" alt="{{ plat.libelle }}">
					<article class="card h-100">
						<div class="card-body">
							<h2 class="card-title">{{ plat.libelle }}</h2>
							<p class="card-text">{{plat.description}}</p>
							<a href="{{ path('plats_details', {"slug": plat.slug})}}" class="btn btn-primary">Voir les détails</a>
						</div>
					</article>
				</div>
			{% endfor %}
            {% set path = 'categories_list' %}
            {% set slug = category.slug %}
            {% set pages = plat.pages %}
            {% set currentPage = plat.page %}
            {% include "_partials/_pagination.html.twig" %}

		</section>
	</main>
{% endblock %}
