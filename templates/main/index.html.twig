{% extends 'base.html.twig' %}




{% block body %}
    <main class='container'>
        <section class="row">
            <div class="col-12">           
                <h1>Site The District </h1>
                <p> Bienvenue dans notre boutique </p>         
            </div>
            {% for categorie in categories %}
            {% if categorie.parent == null %}
               
             <div class="col-12">
                <h2>{{categorie.libelle}}</h2>
            </div>
            {% else %}
                <div class="col-3">
                <div class="card h-100">
  {#<img src="bg.jpg" class="card-img-top" alt="...">#}
        <div class="card-body">
            <h3 class="card-title">{{categorie.libelle}}</h3>
            <a href="{{ path('categories_list', {slug: categorie.slug}) }}" class="btn btn-primary">Voir la categorie</a>
        </div>
    </div>
 </div>
            
            {% endif %}
            {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
