{% extends 'base.html.twig' %}

{% block title %}Détails de {{ plat.libelle }}{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>{{ plat.libelle }}</h1>
            </div>
            <div class="col-6">
                {# Utilisez le chemin pour les images dans le répertoire "plats" ou "food" #}
                <img src="{{ asset('assets/images/images_the_district/plats/' ~ plat.image) }}" class="d-block w-100" alt="...">
				{#<img src="{{ asset('assets/images/images_the_district/food/' ~ plat.image) }}" class="d-block w-100" alt="...">#}
            </div>

            <div class="col-6">
                <p>{{ plat.description }}</p>
                <p>Catégorie : {{ plat.categorie.libelle }}</p>
                <p>Prix : {{ plat.prix }} €</p>
                  {% if plat.active > 0 %}
                    <a href="{{ path('cart_add', {id: plat.id}) }}" class="btn btn-success">Ajouter au panier</a>
                {% else %}
                    <p class="text-danger">Temporairement en rupture de stock</p>
                {% endif %}
            </div>
        </section>
    </main>
{% endblock %}
